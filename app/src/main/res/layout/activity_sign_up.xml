<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".SignUp">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:lottie_rawRes="@raw/signup"
            app:lottie_autoPlay="true"
            app:lottie_loop="false">
        </com.airbnb.lottie.LottieAnimationView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="410dp"
        android:layout_marginTop="270dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/lay"
        android:orientation="vertical">
        <EditText
            android:id="@+id/username"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:hint="Username"
            android:inputType="text"
            android:textSize="17sp"
            android:textStyle="bold"
            android:drawableRight="@drawable/baseline_supervised_user_circle_24"/>

        <EditText
            android:id="@+id/email"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:hint="Email"
            android:inputType="text"
            android:textSize="17sp"
            android:textStyle="bold"
            android:drawableRight="@drawable/baseline_email_24"/>
        <EditText
            android:id="@+id/pass"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:textSize="17sp"
            android:textStyle="bold"
            android:drawableRight="@drawable/baseline_password_24"/>

        <EditText
            android:id="@+id/confpass"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textSize="17sp"
            android:textStyle="bold"
            android:drawableRight="@drawable/baseline_password_24"/>
    </LinearLayout>


    <Button
        android:id="@+id/btn"
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:text="SignUP"
        android:textStyle="bold"
        android:textSize="20sp"
        android:backgroundTint="#FF0000"
        android:layout_marginTop="645dp"
        android:layout_centerHorizontal="true">
    </Button>

</RelativeLayout>